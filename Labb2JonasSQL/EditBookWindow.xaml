<Window x:Class="Labb2JonasSQL.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Book" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Edit Book" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Title:"/>
            <ComboBox x:Name="titleComboBox" DisplayMemberPath="Title" Margin="0,0,0,10" SelectionChanged="TitleComboBox_SelectionChanged"/>

            <TextBlock Text="Language:"/>
            <TextBox x:Name="languageTextBox" Margin="0,0,0,10" IsEnabled="False"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="priceTextBox" Margin="0,0,0,10" IsEnabled="False"/>

            <Button Content="Save Changes" Click="SaveChanges_Click"/>
        </StackPanel>
    </Grid>
</Window>


